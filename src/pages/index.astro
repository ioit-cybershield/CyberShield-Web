---
import Navbar from '@/components/general/Navbar';
import Layout from '../layouts/Layout.astro';
import HeroSection from '@/components/landing/Hero';
import AboutSection from '@/components/landing/About';
import LenisProvider from '@/providers/lenis-provider';
import TimelineSpinner from '@/components/landing/Timeline';
import Gallery from "@/components/landing/Gallery"
import Footer from "@/components/general/Footer"
import Preloader from '@/components/ui/preloader';
---

<Layout>
  <Preloader client:load />
  <LenisProvider client:load>
    <Navbar client:load/>
    <HeroSection client:load/>
    <AboutSection client:visible={{rootMargin: "200px"}} />
    <Gallery client:visible={{rootMargin: "200px"}}/>
    <TimelineSpinner client:visible={{rootMargin: "100px"}} />
    <Footer client:visible />
  </LenisProvider>
</Layout>
